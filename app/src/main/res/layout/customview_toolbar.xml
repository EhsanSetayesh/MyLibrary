<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbarContainer"
        style="@style/ConstraintFillParentTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:paddingLeft="@dimen/space_small_size"
        android:paddingRight="@dimen/space_small_size"
        android:visibility="visible">


        <TextView
            android:id="@+id/txtToolbarTitle"
            style="@style/ConstraintFillParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_size"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:id="@+id/imgBack"
            style="@style/ConstraintFillParentTopBottomRight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/space_tiny_size"
            android:background="@android:color/transparent"
            android:padding="@dimen/space_small_size"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


